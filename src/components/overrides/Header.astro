---
import ThemeSelect from "@astrojs/starlight/components/ThemeSelect.astro";
import config from 'virtual:starlight/user-config';
import Search from 'virtual:starlight/components/Search';

const shouldRenderSearch =
	config.pagefind || config.components.Search !== '@astrojs/starlight/components/Search.astro';
---

<div class="flex h-full items-center justify-between gap-4">
	<a href="/" class="inline-flex items-center gap-1 no-underline">
        <img src="https://cdn.loproda.com/brand/loproda/logo100.png" alt="Loproda" width="32" height="32" class="border rounded-md border-zinc-200 dark:border-zinc-800">
        <span class="text-zinc-950 font-semibold">Loproda docs</span>
    </a>
	<div class="flex gap-8">
		<div id="docsearch">
			{shouldRenderSearch && <Search />}
		</div>
		<div id="right-group" class="hidden h-10 flex-wrap gap-x-2 overflow-hidden">
			<a
				id="header-login-button"
				href="https://my.loproda.com/"
				class="mr-2 flex items-center rounded-lg transition-colors bg-accent-800 hover:bg-accent-700 active:bg-accent-800 px-4 py-2 text-sm text-white no-underline"
			>
				Iniciar sesi√≥n
			</a>
			<div>
				<ThemeSelect />
			</div>
		</div>
	</div>
</div>

<style>
	:global(.site-title) {
		gap: 0.5rem;
		min-width: fit-content;
		overflow: none;

		span {
			color: var(--sl-color-white);
		}

		img {
			height: 1.25rem;
		}
	}

	#social-icons {
		--sl-icon-color: var(--sl-color-white);
	}

	:global(starlight-theme-select > label > select) {
		line-height: 1.25rem;
	}

	@media screen and (min-width: 800px) {
		#right-group {
			display: flex;
		}

		#docsearch {
			width: 20rem;
		}
	}
</style>
